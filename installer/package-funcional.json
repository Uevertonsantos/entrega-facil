{
  "name": "entrega-facil-installer-funcional",
  "version": "1.0.0",
  "description": "Instalador GUI Funcional para Sistema Entrega Fácil",
  "main": "instalador-gui-funcional.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --publish=never",
    "build-dir": "electron-builder --win --dir"
  },
  "author": "Entrega Fácil",
  "license": "MIT",
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^23.0.0"
  },
  "build": {
    "appId": "com.entregafacil.installer",
    "productName": "Entrega Facil Instalador",
    "directories": {
      "output": "dist"
    },
    "files": [
      "instalador-gui-funcional.js",
      "installer-ui-funcional.html",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}